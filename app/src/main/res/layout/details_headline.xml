<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/spacing_normal_10"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_field_number"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_small_8"
        android:gravity="center"
        android:text="№"/>

    <TextView
        android:id="@+id/tv_field_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_field_number"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_small_8"
        android:gravity="center"
        android:text="Название документа"/>

    <TextView
        android:id="@+id/tv_field_group"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_field_name"
        android:layout_marginEnd="@dimen/spacing_small_8"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Группа"/>

    <TextView
        android:id="@+id/tv_field_category"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_field_group"
        android:layout_marginEnd="@dimen/spacing_small_8"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Категория"/>

    <TextView
        android:id="@+id/tv_field_quantity"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_field_category"
        android:layout_marginEnd="@dimen/spacing_small_8"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Количество"/>

    <TextView
        android:id="@+id/tv_field_checked"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_field_quantity"
        android:gravity="center"
        android:text="Просмотрено"/>
</RelativeLayout>