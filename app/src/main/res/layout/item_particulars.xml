<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginEnd="@dimen/spacing_normal_10"
        tools:text="1"/>

    <TextView
        android:id="@+id/tv_document_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_number"
        android:layout_marginEnd="@dimen/spacing_normal_10"
        tools:text="Document name"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_document_name"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_normal_10"
        tools:text="01-12-2021"/>

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_date"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_normal_10"
        tools:text="ЕРЦ Шушары"/>

    <TextView
        android:id="@+id/tv_quantity_pos"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_post"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_normal_10"
        tools:text="15"/>

    <TextView
        android:id="@+id/tv_quantity_checked"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_quantity_pos"
        android:layout_centerVertical="true"
        tools:text="3"/>


</RelativeLayout>