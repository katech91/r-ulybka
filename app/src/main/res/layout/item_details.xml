<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_small_8"
        tools:text="1"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_number"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_small_8"
        tools:text="Крем..."/>

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/spacing_small_8"
        android:layout_toEndOf="@id/tv_name"
        tools:text="Крем для тела" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/spacing_small_8"
        android:layout_toEndOf="@id/tv_group"
        tools:text="Уход за телом" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_category"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/spacing_small_8"
        tools:text="15.0"/>

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@id/tv_quantity"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_done_24"
        android:visibility="gone"
        tools:visibility="visible"/>


</RelativeLayout>